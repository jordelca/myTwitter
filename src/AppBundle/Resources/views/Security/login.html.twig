{% extends "::base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets 'bundles/app/css/login.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}



{% endblock %}

{% block content %}

    <div id="login-form" class="background-cover">


        <div>
            <ul class="form-header">
                <li class="checked"><label for="login"><i class="fa fa-lock"></i> {{ 'login'|trans({}, 'messages') }}</label></li>
                <a href="{{ path('fos_user_registration_register') }}"><li><label for="signup"><i class="fa fa-credit-card"></i> {{ 'register'|trans({}, 'messages') }}</label></li></a>
            </ul>
        </div>

        <div class="section-out">
            <section class="login-section">
                <div class="login">
                    {% if error %}
                        <div class="panel panel-danger">
                            <div class="panel-body">
                                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            </div>
                        </div>
                    {% endif %}
                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        <ul class="ul-list">
                            <li><input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="input" placeholder="{{ 'security.login.username'|trans }}"/><span class="icon"><i class="fa fa-user"></i></span></li>
                            <li><input type="password" id="password" name="_password" required="required" class="input" placeholder="{{ 'security.login.password'|trans }}" /><span class="icon"><i class="fa fa-lock"></i></span></li>
                            <li><span class="remember"><input type="checkbox" id="remember_me" name="_remember_me" value="on" /> <label for="check1">{{ 'security.login.remember_me'|trans }}</label></span><span class="remember"><a href="">Forget Password</a></span></li>
                            <li><input type="submit" value="{{ 'security.login.submit'|trans }}" class="btn"></li>
                        </ul>
                    </form>
                </div>



            </section>

        </div>
        <div>
            <ul class="form-footer">
                <div class="social-login">{{ 'or.sign.with'|trans({},'messages') }}
                    <a href="" class="fb"><i class="fa fa-facebook"></i></a>
                    <a href="" class="tw"><i class="fa fa-twitter"></i></a>
                    <a href="" class="gp"><i class="fa fa-google-plus"></i></a>
                    <a href="" class="in"><i class="fa fa-linkedin"></i></a>
                </div>
            </ul>
        </div>
    </div>

{% endblock content %}
