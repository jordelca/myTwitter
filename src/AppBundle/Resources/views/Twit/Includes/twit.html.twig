<blockquote class="twitter-tweet">
    {{ entity.srcUsrId }} (@{{ entity.srcUsrId }})
    {{ entity.creationTime|date('H:m d/m/Y') }}

    <div class="pull-right">
        <a href="{{ path('twit_edit', { 'id': entity.id }) }}" class="btn btn-primary"><i class="fa fa-edit"></i></a>
        <a href="{{ path('twit_show', { 'id': entity.id }) }}" class="btn btn-primary"><i class="fa fa-eye"></i></a>
    </div>

    <p>{{ entity.message }}</p>
    <p>
        {{ entity.likes }} likes
        {{ entity.retwits }} retwits


    </p>
</blockquote>

