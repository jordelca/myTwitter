{% extends '::layout.html.twig' %}

{% block inner_content %}


    <h1>{{ 'twit.creation'|trans({}, 'messages') }}</h1>

    <blockquote class="twitter-tweet col-xs-12">
        {{ app.user }} (@{{ app.user }})
        {{ form_start(form) }}
        <div class="col-xs-9 pull-left">
            {{ form_widget(form.message, {'attr': {'class': 'pull-left form-control'}}) }}
        </div>
        {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary pull-right col-xs-2'}}) }}

        {{ form_end(form) }}



    </blockquote>




    <a href="{{ path('twit') }}" class="btn btn-primary">
        {{ 'back.to.list'|trans({}, 'messages') }}
    </a>
{% endblock %}
