    <blockquote class="twitter-tweet col-xs-12">
            <p>{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</p>
            {% if targetUrl %}
                <p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>
            {% endif %}
    </blockquote>


    <a href="{{ path('twit') }}" class="btn btn-primary">
        Back to the list
    </a>

</ul>
{% endblock %}
